<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_coursework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/weather_list_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/weather_list_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/menu_bar_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/weather_list_dark</item>
<!--        <item name="android:listViewStyle">@color/weather_list_dark</item>-->
    </style>

    <style name="header">
        <item name="android:textColor">@color/header_dark</item>
    </style>

    <style name="menu_bar">
        <item name="android:background">@color/menu_bar_dark</item>
    </style>

</resources>